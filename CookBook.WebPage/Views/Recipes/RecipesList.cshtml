@model IEnumerable<Cookbook.Common.Models.Recipe>

@using (Html.BeginForm("RecipesList", "Recipes", FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form"
}))
{
    <h4>Recipes list</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model)  
            {  
                <tr>  
                    <td scope="row">@recipe.Id</td>  
                    <td>@recipe.Name</td>  
                    <td>   
                         @Html.ActionLink("Delete", "Delete", "Recipes", new { Id = recipe.Id })
                    </td>   
                    <td>   
                         @Html.ActionLink("Show", "ShowRecipe", "Recipes", new { Id = recipe.Id })
                    </td> 
                </tr>  
            }
        </tbody>
    </table>
}