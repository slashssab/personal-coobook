@model List<CookBook.WebPage.Models.RecipeViewModel>

@using (Html.BeginForm("RecipesList", "Recipes", FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form"
}))
{
    <h4>Recipes list</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Calories</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model)  
            {  
                <tr> 
                    <td scope="row">@recipe.Name</td>  
                    <td scope="row">@recipe.Calories</td>
                    <td>   
                         @Html.ActionLink("Delete", "Delete", "Recipes", new { Id = recipe.Id })
                    </td>   
                    <td>   
                         @Html.ActionLink("Show", "ShowRecipe", "Recipes", new { Id = recipe.Id })
                    </td> 
                </tr>  
            }
        </tbody>
    </table>
}